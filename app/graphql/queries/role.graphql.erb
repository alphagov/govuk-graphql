query role($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      attends_cabinet_type
      body
      role_payment_type
      seniority
      supports_historical_accounts
      whip_organisation
    }
    links {
      ...AvailableTranslations
      ...OrderedParentOrganisations
      ...Organisations
      ...RoleAppointments
    }
  }
}
