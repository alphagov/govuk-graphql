query coronavirus_landing_page($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      header_section
      hidden_search_terms
      sections
    }
    links {
      ...AvailableTranslations
      ...Organisations
      ...SuggestedOrderedRelatedItems
      ...Taxons
    }
  }
}
