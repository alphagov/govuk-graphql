<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/ordered_related_items" %>
<%= render "fragments/parents" %>

query historic_appointment($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      born
      dates_in_office
      died
      interesting_facts
      major_acts
      political_party
    }
    links {
      ...AvailableTranslations
      ...OrderedRelatedItems
      ...Parents
      person: links_of_type(type: person) {
        api_path
        api_url
        base_path
        content_id
        details {
          body
          image
        }
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
    }
  }
}
