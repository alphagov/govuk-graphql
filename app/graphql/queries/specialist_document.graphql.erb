<%= render "fragments/taxons" %>

query specialist_document($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      attachments
      body
      change_history
      max_cache_time
      metadata
      temporary_update_type
    }
    links {
      ...AvailableTranslations
      finder: links_of_type(type: "finder") {
        api_path
        api_url
        base_path
        content_id
        details {
          facets
        }
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...Organisations
      ...PrimaryPublishingOrganisation
      ...Taxons
    }
  }
}
