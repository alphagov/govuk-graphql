query smart_answer($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      hidden_search_terms
    }
    links {
      ...AvailableTranslations
      ...MainstreamBrowsePages
      ...OrderedRelatedItems
      ...Organisations
      ...Parents
      ...SuggestedOrderedRelatedItems
      ...Taxons
    }
  }
}
