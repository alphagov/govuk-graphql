query html_publication($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      first_published_version
      political
      public_timestamp
    }
    links {
      ...AvailableTranslations
      ...Government
      ...Organisations
      ...Parents
      ...PrimaryPublishingOrganisation
    }
  }
}
