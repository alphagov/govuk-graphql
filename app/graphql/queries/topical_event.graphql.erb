<%#
Examples:
- https://www.gov.uk/government/topical-events/vjday70
- https://www.gov.uk/government/topical-events/budget-2015
- https://www.gov.uk/government/topical-events/open-government-partnership-summit-2013
- https://www.gov.uk/government/topical-events/nato-summit-wales-cymru-2014
%>

<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>

query topical_event($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      emphasised_organisations
      end_date
      ordered_featured_documents
      social_media_links
      start_date
    }
    links {
      ...AvailableTranslations
    }
  }
}
