%>

<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>

query fields_of_operation($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    links {
      ...AvailableTranslations
      fields_of_operation: links_of_type(type: "fields_of_operation") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
    }
  }
}
