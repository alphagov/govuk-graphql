Examples:
- https://www.gov.uk/government/organisations
%>

<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>

query organisations_homepage($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      ordered_agencies_and_other_public_bodies
      ordered_devolved_administrations
      ordered_executive_offices
      ordered_high_profile_groups
      ordered_ministerial_departments
      ordered_non_ministerial_departments
      ordered_public_corporations
    }
    links {
      ...AvailableTranslations
    }
  }
}
