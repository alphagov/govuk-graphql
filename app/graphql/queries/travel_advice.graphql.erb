        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ordered_related_items: links_of_type(type: "ordered_related_items") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      organisations: links_of_type(type: "organisations") {
        analytics_identifier
        api_path
        api_url
