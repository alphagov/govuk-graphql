        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      suggested_ordered_related_items: links_of_type(type: "suggested_ordered_related_items") {
        api_path
        api_url
