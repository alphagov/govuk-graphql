Examples:
- https://www.gov.uk/foreign-travel-advice/maldives
- https://www.gov.uk/foreign-travel-advice/guatemala
- https://www.gov.uk/foreign-travel-advice/cambodia
- https://www.gov.uk/foreign-travel-advice/chad
%>

<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/ordered_related_items" %>
<%= render "fragments/organisations" %>
<%= render "fragments/parents" %>
<%= render "fragments/primary_publishing_organisation" %>
<%= render "fragments/related" %>
<%= render "fragments/suggested_ordered_related_items" %>
<%= render "fragments/taxons" %>

query travel_advice($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      alert_status
      change_description
      change_history
      country
      email_signup_link
      max_cache_time
      parts
      reviewed_at
      updated_at
    }
    links {
      ...AvailableTranslations
      ...OrderedRelatedItems
      ...Organisations
      ...Parents
      ...PrimaryPublishingOrganisation
      ...Related
      ...SuggestedOrderedRelatedItems
      ...Taxons
    }
  }
}
