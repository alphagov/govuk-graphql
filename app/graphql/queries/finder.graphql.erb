<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/organisations" %>

query finder($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      default_documents_per_page
      document_noun
      facets
      filter
      show_summaries
    }
    links {
      ...AvailableTranslations
      email_alert_signup: links_of_type(type: "email_alert_signup") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...Organisations
    }
  }
}
