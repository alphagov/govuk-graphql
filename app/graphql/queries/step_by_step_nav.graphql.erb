query step_by_step_nav($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      change_history
      step_by_step_nav
    }
    links {
      ...AvailableTranslations
      ...MainstreamBrowsePages
      ...Organisations
      pages_part_of_step_nav: links_of_type(type: "pages_part_of_step_nav") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      pages_related_to_step_nav: links_of_type(type: "pages_related_to_step_nav") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...Parents
      ...SuggestedOrderedRelatedItems
      ...Taxons
    }
  }
}
