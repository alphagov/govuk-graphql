<%#
Examples:
- https://www.gov.uk/government/organisations/high-speed-two-limited
- https://www.gov.uk/government/organisations/office-of-the-first-minister-and-deputy-first-minister
- https://www.gov.uk/government/organisations/scotland-office
- https://www.gov.uk/government/organisations/defence-analytical-services-agency
%>

<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/ordered_parent_organisations" %>
<%= render "fragments/primary_publishing_organisation" %>

query organisation($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      acronym
      alternative_format_contact_email
      body
      brand
      default_news_image
      foi_exempt
      logo
      ordered_corporate_information_pages
      ordered_featured_documents
      ordered_featured_links
      ordered_promotional_features
      organisation_featuring_priority
      organisation_govuk_status
      organisation_political
      organisation_type
      secondary_corporate_information_pages
      social_media_links
    }
    links {
      ...AvailableTranslations
      ordered_board_members: links_of_type(type: "ordered_board_members") {
        api_path
        api_url
        base_path
        content_id
        details {
          image
          privy_counsellor
        }
        document_type
        links {
          ...RoleAppointments
        }
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ordered_contacts: links_of_type(type: "ordered_contacts") {
        content_id
        details {
          contact_form_links
          description
          email_addresses
          phone_numbers
          post_addresses
          title
        }
        document_type
        locale
        public_updated_at
        schema_name
        title
        withdrawn
      }
      ordered_foi_contacts: links_of_type(type: "ordered_foi_contacts") {
        content_id
        details {
          contact_form_links
          description
          email_addresses
          phone_numbers
          post_addresses
          title
        }
        document_type
        locale
        public_updated_at
        schema_name
        title
        withdrawn
      }
      ...OrderedParentOrganisations
      ordered_roles: links_of_type(type: "ordered_roles") {
        content_id
        details {
          body
          role_payment_type
        }
        document_type
        locale
        public_updated_at
        schema_name
        title
        withdrawn
      }
      ...PrimaryPublishingOrganisation
    }
  }
}
