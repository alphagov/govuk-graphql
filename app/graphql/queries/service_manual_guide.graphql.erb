query service_manual_guide($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      change_history
      change_note
      header_links
    }
    links {
      ...AvailableTranslations
      ...ContentOwners
      ...Organisations
      ...PrimaryPublishingOrganisation
      service_manual_topics: links_of_type(type: "service_manual_topics") {
        api_path
        api_url
        base_path
        content_id
        description
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...SuggestedOrderedRelatedItems
      ...Taxons
    }
  }
}
