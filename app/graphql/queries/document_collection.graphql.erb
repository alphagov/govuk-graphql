query document_collection($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      change_history
      collection_groups
      emphasised_organisations
      first_public_at
      political
    }
    links {
      ...AvailableTranslations
      documents: links_of_type(type: documents) {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...Government
      ...Organisations
      ...OriginalPrimaryPublishingOrganisation
      ...PrimaryPublishingOrganisation
      ...SuggestedOrderedRelatedItems
      ...Taxons
    }
  }
}
