<%= render "fragments/available_translations" %>
<%= render "fragments/organisations" %>
<%= render "fragments/primary_publishing_organisation" %>

query manual_section($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      attachments
      body
      change_history
      manual
      organisations
      visually_expanded
    }
    links {
      ...AvailableTranslations
      manual: links_of_type(type: "manual") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...Organisations
      ...PrimaryPublishingOrganisation
    }
  }
}
