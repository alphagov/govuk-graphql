<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/parents" %>
<%= render "fragments/worldwide_organisation" %>

query worldwide_office($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      access_and_opening_times
      services
      type
    }
    links {
      ...AvailableTranslations
      contact: links_of_type(type: contact) {
        content_id
        details {
          contact_form_links
          description
          email_addresses
          phone_numbers
          post_addresses
          title
        }
        document_type
        locale
        public_updated_at
        schema_name
        title
        withdrawn
      }
      ...Parents
      ...WorldwideOrganisation
    }
  }
}
