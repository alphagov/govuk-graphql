- https://www.gov.uk/government/speeches/speech-to-the-british-irish-association-conference
- https://www.gov.uk/government/speeches/speech-by-jeremy-browne-mp-on-female-genital-mutilation
- https://www.gov.uk/government/speeches/2010-07-22-ads-charity-dinner-in-support-of-ssafa-forces-help
%>

<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/government" %>
<%= render "fragments/organisations" %>
<%= render "fragments/original_primary_publishing_organisation" %>
<%= render "fragments/primary_publishing_organisation" %>
<%= render "fragments/roles" %>
<%= render "fragments/taxons" %>
<%= render "fragments/world_locations" %>

query speech($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      change_history
      delivered_on
      first_public_at
      image
      location
      political
      speech_type_explanation
    }
    links {
      ...AvailableTranslations
      ...Government
      ...Organisations
      ...OriginalPrimaryPublishingOrganisation
      people: links_of_type(type: "people") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...PrimaryPublishingOrganisation
      ...Roles
      speaker: links_of_type(type: "speaker") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...Taxons
      ...WorldLocations
    }
  }
}
