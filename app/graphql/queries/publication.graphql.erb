query publication($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      attachments
      body
      change_history
      documents
      emphasised_organisations
      featured_attachments
      first_public_at
      national_applicability
      political
      tags
    }
    links {
      ...AvailableTranslations
      ...Government
      ...Organisations
      ...OriginalPrimaryPublishingOrganisation
      ...PrimaryPublishingOrganisation
      ...Taxons
    }
  }
}
