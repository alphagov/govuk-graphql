query call_for_evidence($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      attachments
      body
      change_history
      closing_date
      documents
      emphasised_organisations
      featured_attachments
      first_public_at
      opening_date
      outcome_attachments
      outcome_detail
      outcome_documents
      political
      tags
    }
    links {
      ...AvailableTranslations
      ...Government
      ...Organisations
      ...OriginalPrimaryPublishingOrganisation
      ...PrimaryPublishingOrganisation
      ...SuggestedOrderedRelatedItems
      ...Taxons
    }
  }
}
