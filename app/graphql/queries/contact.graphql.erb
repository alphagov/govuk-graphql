<%= render "fragments/parents" %>
<%= render "fragments/primary_publishing_organisation" %>

query contact($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      contact_form_links
      contact_groups
      description
      email_addresses
      language
      more_info_contact_form
      more_info_email_address
      more_info_phone_number
      more_info_post_address
      more_info_webchat
      phone_numbers
      post_addresses
      query_response_time
      quick_links
      slug
      title
    }
    links {
      ...AvailableTranslations
      ...DocumentCollections
      ...Organisations
      ...Parents
      ...PrimaryPublishingOrganisation
    }
  }
}
