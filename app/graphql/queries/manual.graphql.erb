query manual($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      body
      change_history
      change_notes
      child_section_groups
      organisations
    }
    links {
      ...AvailableTranslations
      ...DocumentCollections
      ...Organisations
      ...PrimaryPublishingOrganisation
      sections: links_of_type(type: "sections") {
        api_path
        api_url
        base_path
        content_id
        document_type
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...SuggestedOrderedRelatedItems
    }
  }
}
