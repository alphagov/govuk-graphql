<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/parents" %>

query historic_appointments($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      appointments_without_historical_accounts
    }
    links {
      ...AvailableTranslations
      historical_accounts: links_of_type(type: historical_accounts) {
        api_path
        api_url
        base_path
        content_id
        details {
          dates_in_office
          political_party
        }
        document_type
        links {
          person: links_of_type(type: person) {
            api_path
            api_url
            base_path
            content_id
            details {
              body
              image
            }
            document_type
            locale
            public_updated_at
            schema_name
            title
            web_url
            withdrawn
          }
        }
        locale
        public_updated_at
        schema_name
        title
        web_url
        withdrawn
      }
      ...Parents
    }
  }
}
