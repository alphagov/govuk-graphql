<%#
Examples:
- https://www.gov.uk/world/romania/news
- https://www.gov.uk/world/mongolia/news
- https://www.gov.uk/world/st-kitts-and-nevis/news
- https://www.gov.uk/world/zambia/news
%>

<%= render "fragments/default_top_level_fields" %>
<%= render "fragments/available_translations" %>
<%= render "fragments/taxons" %>

query world_location_news($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      mission_statement
      ordered_featured_documents
      ordered_featured_links
      world_location_news_type
    }
    links {
      ...AvailableTranslations
      ...Taxons
    }
  }
}
