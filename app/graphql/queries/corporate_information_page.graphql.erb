query corporate_information_page($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      attachments
      body
      change_history
      organisation
      tags
    }
    links {
      ...AvailableTranslations
      ...Organisations
      ...Taxons
    }
  }
}
