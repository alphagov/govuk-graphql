query place($base_path: String!, $locale: String!) {
  edition(base_path: $base_path, locale: $locale) {
    ...DefaultTopLevelFields
    details {
      external_related_links
      introduction
      more_information
      place_type
    }
    links {
      ...AvailableTranslations
      ...DocumentCollections
      ...MainstreamBrowsePages
      ...OrderedRelatedItems
      ...Organisations
      ...Parents
      ...PrimaryPublishingOrganisation
      ...Taxons
    }
  }
}
